{
  "name": "@student-attendance/electron",
  "version": "1.0.0",
  "description": "Desktop wrapper for Student Attendance System",
  "author": "Minpyo",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "rm -rf frontend-dist && cp -R ../frontend/dist frontend-dist",
    "build": "npm run prebuild && electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.student.attendance",
    "productName": "StudentAttendance",
    "files": [
      "**/*",
      "frontend-dist/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist-electron"
    }
  }
}